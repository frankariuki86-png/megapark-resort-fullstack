# Backend Configuration

# Server port (default 3000)
PORT=3000

# Database connection (optional; defaults to file-based JSON store in ./data/)
# For Postgres: DATABASE_URL=postgresql://user:pass@localhost:5432/megapark
# Leave empty or unset to use file-based store
# DATABASE_URL=

# JWT Configuration
# Secret key for signing JWT tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-change-me-in-production

# JWT expiration time (e.g., 24h, 7d)
JWT_EXPIRES=24h

# JWT Refresh Token Configuration
JWT_REFRESH_SECRET=your-refresh-secret-key-change-me
JWT_REFRESH_EXPIRES=7d

# Email Configuration (Nodemailer)
# Example: Gmail - requires App Password
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=noreply@megapark.com

# Or use SendGrid
# EMAIL_SERVICE=SendGrid
# SENDGRID_API_KEY=SG.xxx

EMAIL_FROM=noreply@megapark-hotel.com

# Stripe Configuration (Payment Gateway)
# Get from https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

